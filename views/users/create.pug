extends ../layouts/common
block content 
    div
        if errors
            .alert.alert-danger #{errors}
        h1 Create form
        form(action="/users/create", method="POST", enctype="multipart/form-data")
            .form-group
                label(for="name") Name
                input#name.form-control(name="name", type="text", value=value ? value.name : "")
            .form-group
                label(for="phone") Phone
                input#phone.form-control(name="phone", type="text", value=value ? value.phone : "")
            .form-group
                label(for="avatar") Avatar
                input#avatar.form-control-file(name="avatar", type="file")    
            button.btn.btn-primary Create